<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Announcement"
    android:id="@+id/relativeLayout">

    <EditText
        android:id="@+id/announce"
        android:layout_width="361dp"
        android:layout_height="77dp"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="37dp"
        android:ems="10"
        android:hint="Announcement"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toTopOf="@+id/ann"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/ann"
        android:layout_width="210dp"
        android:layout_height="49dp"
        android:layout_marginBottom="106dp"
        android:layout_marginTop="146dp"
        android:text="Add"
        app:layout_constraintBottom_toTopOf="@+id/recycler1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/uploadlist"
        android:layout_width="214dp"
        android:layout_height="50dp"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="99dp"
        android:layout_marginStart="98dp"
        android:layout_marginTop="9dp"
        android:text="Upload List"
        app:layout_constraintBottom_toTopOf="@+id/recycler1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ann" />

    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/recycler1"
        android:layout_width="fill_parent"
        android:layout_height="400dp"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uploadlist">


    </android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>